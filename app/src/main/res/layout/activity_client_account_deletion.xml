<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/gray_500">
<!--    tools:context=".ClientAccountDeletionActivity"-->
<!--    tools:ignore="HardcodedText"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#323030"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/accountDeletionHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Deletion:"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/accountDeletionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are about to delete your current account.\n\nWaring:\nAccounts cannot be recovered once deleted. If you wish to continue using this application you will need to create a new account or use an existing account. "
            android:textSize="25dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:backgroundTint="#881010"
            android:paddingHorizontal="80dp"
            android:paddingVertical="20dp"
            app:cornerRadius="15dp"
            android:text="Proceed" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_margin="10dp"
            android:backgroundTint="#881010"
            android:paddingHorizontal="80dp"
            android:paddingVertical="20dp"
            app:cornerRadius="15dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>